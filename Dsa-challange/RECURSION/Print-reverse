#include <iostream>
using namespace std;

void printCounting(int n){
   //base case mens Rukna kb hai
   if(n==0)
   {
    return;
   }
   //processing
   cout<<n<<endl;
   
   //recursive relation;
   printCounting(n-1);
}

int main()
{
    int n;
    cout<<"Enter the value of n"<<endl;
    cin>>n;
    
     printCounting(n);
    
    return 0;
}
