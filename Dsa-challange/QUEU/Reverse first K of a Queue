Edit
while(t--) {
    int val = q.front();   // get 40, then 50
    q.pop();               // remove from front
    q.push(val);           // insert at rear
}
Loop 1:
Front = 40 â†’ pop it â†’ push to back
â†’ Queue = [50, 30, 20, 10, 40]

Loop 2:
Front = 50 â†’ pop it â†’ push to back
â†’ Queue = [30, 20, 10, 40, 50]

ğŸ¯ Final Queue:
[30, 20, 10, 40, 50] âœ…






class Solution {
  public:
    queue<int> reverseFirstK(queue<int> q, int k) {
        // code here
          // Check for invalid k
        if (k > q.size() || k < 0) return q;

        // step1: pop first k from Q and put into stack
        stack<int> s;
        
        for(int i=0;i<k;i++)
        {
            int val=q.front();
            q.pop();
            s.push(val);
        }
        
        // step 2: fetch  from stack and push into q
        while(!s.empty()){
            int val= s.top();
            s.pop();
            q.push(val);
        }
        
        //step3: fetch first (n-k) element from Q and push back
        
        int t=q.size()-k;
        
        while(t--){
            int val= q.front();
            q.pop();
            q.push(val);
        }
        return q;
    }
};
