Replace all space to @----------------------->


#include <iostream>
#include<string>
using namespace std;

int main()
{
  string s="My name is Nitish";
  int n=s.size();
//   int n=strlen(s); or use this for find length
  for(int i=0;i<n;i++)
  {
      if(s[i]==' ')
      {
          s[i]='@';
      }
      cout<<s[i];
      
  }

    return 0;
}                    OUTPUT----====>  My@name@is@Nitish
