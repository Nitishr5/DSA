Bubble Sort




class Solution {
  public:
    void bubbleSort(vector<int>& arr) {
        // code here
        int n=arr.size();
        for(int i=n-2;i>=0;i--)
        {
            // bool swapped=0;
            for(int j=0;j<=i;j++)
            {
                if(arr[j]>arr[j+1])
                {
                    // swappped=1;
                    swap(arr[j],arr[j+1]);
                }
            }
            
        }
    }
};
